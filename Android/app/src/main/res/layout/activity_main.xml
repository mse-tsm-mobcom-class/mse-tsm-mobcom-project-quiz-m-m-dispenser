<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ch.mse.quiz.MainActivity">

    <ImageView
        android:id="@+id/mainLogo"
        android:layout_width="318dp"
        android:layout_height="240dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/quiz_image_description"
        app:srcCompat="@drawable/quiz" />

    <ScrollView
        android:id="@+id/svBleDevices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/mainLogo">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvLabelSelectDevice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/spBleScanResult"
                android:text="@string/ble_label_select_device" />

            <Spinner
                android:id="@+id/spBleScanResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/svSelectQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/svBleDevices"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvLabelSelectQuestions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/npQuestionNumber"
                android:text="@string/selectQuestions" />

            <NumberPicker
                android:id="@+id/npQuestionNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants"
                />

            <NumberPicker
                android:id="@+id/npQuestionTopic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants"
                />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button_startQuiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/svSelectQuestion"
        android:layout_centerHorizontal="true"
        android:background="@color/design_default_color_primary"
        android:text="@string/start_quiz"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnDispense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_startQuiz"
        android:layout_centerHorizontal="true"
        android:text="@string/dispenserState" />

</RelativeLayout>